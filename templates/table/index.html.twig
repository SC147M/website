{% extends 'base.html.twig' %}

{% block title %}Table index{% endblock %}

{% block body %}
    <div class="container main-container">
        <div class="row">
            <div class="col-12 mt-4">
                <h1>Table index</h1>

                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Locked</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for table in tables %}
                        <tr>
                            <td>{{ table.id }}</td>
                            <td>{{ table.name }}</td>
                            <td>{{ table.locked ? 'Yes' : 'No' }}</td>
                            <td>
                                <a href="{{ path('table_show', {'id': table.id}) }}">show</a>
                                <a href="{{ path('table_edit', {'id': table.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('table_new') }}">Create new</a>
            </div>
        </div>
    </div>
{% endblock %}
