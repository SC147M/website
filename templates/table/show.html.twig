{% extends 'base.html.twig' %}

{% block title %}Table{% endblock %}

{% block body %}
    <h1>Table</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ table.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ table.name }}</td>
            </tr>
            <tr>
                <th>Locked</th>
                <td>{{ table.locked ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('table_index') }}">back to list</a>

    <a href="{{ path('table_edit', {'id': table.id}) }}">edit</a>

    {{ include('table/_delete_form.html.twig') }}
{% endblock %}
